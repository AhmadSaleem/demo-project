<div container>
  <div class="col-sm-12 col-md-12 col-lg-12">
    <ol class="breadcrumb">
      <li><%= link_to "Home", products_path %></li>
      <li><%= link_to @product.title, product_path(@product) %></li>
      <li class="active">All Reviews</li>
    </ol>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Listing reviews for <%= link_to @product.title, product_path(@product) %></h1>
      </div>
      <div class="panel-body">
        <%= paginate @reviews %>
        <div id="show-reviews">
          <%= render @reviews %>
        </div>
        <%= paginate @reviews %>
      </div>
    </div>
    <%= button_to("Add a new review", new_product_review_path, class: "btn btn-primary", method: :get) unless authorized_user?(@product.user) %>
  </div>
</div>
