<div class="thumbnail show-thumb">
  <% @product.images.build if @product.images.blank? %>
  <%= image_tag render_photo(@product.images.first), class: "img img-responsive" %>
  <div class="caption-full">
    <h4 class="pull-right">Rs. <%= @product.price.to_s %></h4>
    <h4><%= link_to @product.title, @product %></h4>
    <span><%= @product.body %></span>
  </div>
</div>

<h2>Pictures</h2>

<% @product.images.each do|image|%>
  <div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail product-thumb">
      <%= image_tag render_photo(image), class: "img img-responsive" %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-12">
    <h2>Reviews</h2>
    <div id="show-reviews">
      <%= render @product.reviews %>
    </div>
  </div>
</div>


<%= render 'reviews/add_review' %>

<% if authorized_user?(@product.user) %>
  <%= link_to 'Edit', edit_product_path(@product) %>
<% end %>

<%= link_to 'Back', products_path %>
