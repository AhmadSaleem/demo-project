<p id="notice"><%= notice %></p>

<div class="container">
  <div class="col-md-12">
    <h1><%= link_to render_name(current_user), user_path(current_user) %></h1>
    <div class="row">
      <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail user-img">
          <%= image_tag render_large_photo(current_user.image), class: "img img-responsive img-responsive-height" %>
        </div>
          <h3><%= current_user.email %></h3>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-12">
    <h1>Products</h1>
    <%= paginate @products %>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-4 col-lg-4 col-md-4">
          <div class="thumbnail user-thumb">
            <%= image_tag render_photo(product.images.first), class: "img img-responsive" %>
            <div class="caption">
              <h4><%= link_to product.title, product %></h4>
              <%= link_to "Details", product, class: "btn btn-default btn-sm" %>
              <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary btn-sm" %>
              <%= link_to "Delete", product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @products %>
  </div>

  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">My Reviews</div>
      <div class="panel-body">
        <%= paginate @reviews %>
        <div id="show-reviews">
          <%= render @reviews %>
        </div>
        <%= paginate @reviews %>
      </div>
    </div>
  </div>
</div>
