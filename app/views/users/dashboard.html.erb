<p id="notice"><%= notice %></p>

<h1>Personal Information</h1>

<p>
  <b>Email:</b>
  <%= current_user.email %>
</p>

<p>
  <b>Name:</b>
  <%= current_user.first_name %> <%= current_user.last_name %>
</p>

<p>
  <b>Profile Picture:</b>
  <%= image_tag current_user.image.photo.url(:small) unless current_user.image.nil? %>
</p>

<h1>Your Products</h1>

<%= paginate @products %>

<% @products.each do |product| %>
  <div><%= image_tag product.images.first.photo.url(:small) unless product.images.first.nil? %></div>
  <div><%= product.title %></div>
  <div><%= product.price %></div>
  <div><%= link_to 'Show', product %></div>
  <div><%= link_to 'Edit', edit_product_path(product) %></div>
  <div><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
<% end %>

<%= paginate @products %>

<h1>Your Reviews</h1>

<%= paginate @reviews %>

<% @reviews.each do |review| %>
  <div><%= review.body %></div>
  <div><%= link_to 'Show', product_path(review.product) %></div>
  <div><%= link_to 'Edit', edit_product_review_path(review.product, review) %></div>
  <div><%= link_to 'Destroy', [review.product, review], method: :delete, data: { confirm: 'Are you sure?' } %></div>
<% end %>

<%= paginate @reviews %>
